<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/CobreTela"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:elevation="3dp" />

            <ImageView
                android:id="@+id/CardImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_column="0"
                android:layout_row="0" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CardDescription1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="qwehiuqw hkehqwh ehwq uehwqkje hwqjke hqw whqekjq whkejqw hekjqw"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CardSubDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:minLines="1"
                android:text="TextView"
                android:textAlignment="textStart"
                android:textColor="@android:color/darker_gray"
                android:textSize="8sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconTop"
            android:layout_width="15dp"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/UpVotes"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:maxLines="1"
            android:paddingLeft="2dp"
            android:text="2"
            android:textAlignment="textStart"
            android:textColor="@color/colorNoActived"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/iconDown"
            android:layout_width="15dp"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/DownVotes"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:maxLines="1"
            android:paddingLeft="2dp"
            android:text="2"
            android:textAlignment="textStart"
            android:textColor="@color/colorNoActived"
            android:textSize="10sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

        <ImageView
            android:id="@+id/iconComment"
            android:layout_width="15dp"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/Coments"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:maxLines="1"
            android:paddingLeft="2dp"
            android:text="222"
            android:textAlignment="textStart"
            android:textColor="@color/colorNoActived"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/iconShare"
            android:layout_width="15dp"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/Shares"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:maxLines="1"
            android:paddingLeft="2dp"
            android:text="2"
            android:textAlignment="textStart"
            android:textColor="@color/colorNoActived"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>