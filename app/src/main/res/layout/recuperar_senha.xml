<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.erison.mapateste4.recuperar_senha">

    <TextView
        android:id="@+id/txt_recupera_senha_esquece"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botaoEnviar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp"
        android:text="Digite o seu email para recuperar usuÃ¡rio e senha"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <Button
        android:id="@+id/botaoqualqer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Enviar"
        android:textColor="@android:color/white"
        android:theme="@style/MyButton" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/esquecce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botaoqualqer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp">

        <EditText
            android:id="@+id/recuperarEmail_esquece"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hint" />
    </android.support.design.widget.TextInputLayout>

</RelativeLayout>
