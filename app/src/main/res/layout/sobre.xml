<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sobreid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/toobarEditarSenhaid"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="0dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/TolbarName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="72dp"
                android:text="Sobre"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="false"
                android:layout_centerVertical="true"
                android:background="@color/colorPrimary"
                android:foregroundGravity="center"
                android:scaleType="fitCenter"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:srcCompat="@drawable/voltar" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textoSobreid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/logoid"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_weight="2.42"
        android:gravity="center_horizontal"
        android:text="POLIS é um meio virtual onde os cidadãos possam interagir de diversas formas sobre questões relevantes da sua cidade. Nosso objetivo é aumentar o engajamento político dos cidadãos, aproximar as pessoas das instituições da sua cidade, transparecer as informações e contribuir para uma cidade mais inteligente."
        android:textAlignment="textStart"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/logoid"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/toobarEditarSenhaid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/polislogo" />


</RelativeLayout>